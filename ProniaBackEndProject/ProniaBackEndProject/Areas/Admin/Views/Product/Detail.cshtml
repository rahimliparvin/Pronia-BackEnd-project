@using ProniaBackEndProject.Areas.Admin.ViewModels.ProductVM;
@model ProductDetailsVM

@{
    ViewData["Title"] = "Detail";
}

<div class="container" style="padding-left:200px">

    @foreach (var image in Model.Images)
    {
        <img class="mb-3" style="width: 300px; height: 300px; border-radius: unset; object-fit: cover" src="~/assets/images/website-images//@image" />
    }

    <div class="form-group my-3">
        <label>NAME</label>
        <input disabled class="form-control" value="@Model.Name" style="display:block;" />
    </div>
    <div class="form-group  my-3">
        <label>Description</label>
        <input disabled class="form-control" value="@Model.Description" style="display:block;" />
    </div>

    <div class="form-group my-3">
        <label>Price</label>
        <input disabled class="form-control" value="@Model.Price" style="display:block;" />
    </div>

    <div class="form-group my-3">
        <label>SaleCount</label>
        <input disabled class="form-control" value="@Model.SaleCount" style="display:block;" />
    </div>

    <div class="form-group my-3">
        <label>StockCount</label>
        <input disabled class="form-control" value="@Model.StockCount" style="display:block;" />
    </div>


    <div class="form-group my-3">
        <label>Sku</label>
        <input disabled class="form-control" value="@Model.SKU" style="display:block;" />
    </div>


    <div class="form-group my-3">
        <label>Rates</label>
        <input disabled class="form-control" value="@Model.Rating" style="display:block;" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Categories"></label>
        @foreach (var category in Model.Categories)
        {
            <input class="form-control" disabled value="@category">
        }
    </div>


    <div class="form-group my-3">
        <label asp-for="Tags"></label>
        @foreach (var tag in Model.Tags)
        {
            <input class="form-control" disabled value="@tag">
        }
    </div>


    <div class="form-group my-3">
        <label asp-for="Colors"></label>
        @foreach (var color in Model.Colors)
        {
            <input class="form-control" disabled value="@color">
        }
    </div>


    <div class="form-group my-3">
        <label asp-for="Sizes"></label>
        @foreach (var size in Model.Sizes)
        {
            <input class="form-control" disabled value="@size">
        }
    </div>

    <div class="form-group my-3">
        <label>Created</label>
        <input disabled class="form-control" value="@Model.CreatedAt" style="display:block;" />
    </div>

    <div class="form-group my-3">
        <label>Updates</label>
        <input disabled class="form-control" value="@Model.UpdatedAt" style="display:block;" />
    </div>


    <a style=" float: right;" class="btn btn-info my-3" asp-action="Index">Back</a>

</div>

