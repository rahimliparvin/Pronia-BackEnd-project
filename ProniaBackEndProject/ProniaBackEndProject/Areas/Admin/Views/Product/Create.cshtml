@using ProniaBackEndProject.Areas.Admin.ViewModels.ProductVM;
@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
}


<div style="padding-left:200px" class="container my-5">
    <h1>Create</h1>
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="form-group  my-3">
            <label>Add Name</label>
            <textarea class="form-control" type="text" id="Product-Name" asp-for="Name"></textarea>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group  my-3">
            <label class="mt-2">Add Description</label>
            <textarea class="form-control" type="text" id="Product-Desc" asp-for="Description"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="from-group  my-3">
            <label class="mt-2">Add Price</label>
            <input class="form-control" id="customFile" asp-for="Price">
            <span class="text-danger " asp-validation-for="Price"></span>
        </div>

        <div class="from-group  my-3">
            <label class="mt-2">Add Information</label>
            <input class="form-control" type="text" id="customFile" asp-for="Information">
            <span class="text-danger " asp-validation-for="Information"></span>
        </div>
        <div class="from-group  my-3">
            <label class="mt-2">Add Rates</label>
            <input class="form-control" type="number" min="1" max="5" id="customFile" asp-for="Rates">
            <span class="text-danger " asp-validation-for="Rates"></span>
        </div>
        <div class="from-group  my-3">
            <label class="mt-2">Add SaleCount</label>
            <input class="form-control" type="number" id="customFile" asp-for="SaleCount">
            <span class="text-danger" asp-validation-for="SaleCount"></span>
        </div>
        <div class="from-group  my-3">
            <label class="mt-2">Add Sku</label>
            <input class="form-control" type="text"  id="customFile" asp-for="Sku">
            <span class="text-danger " asp-validation-for="Sku"></span>
        </div>

        <div class="form-group">
            <label class="mt-2">Choose Product's Category</label>
            <select class="form-select" aria-label="Default select example" id="customFile" asp-for="ProductCategoriesIds" asp-items="ViewBag.categories"></select>
        </div>
        <div class="form-group" >
            <label class="mt-2">Choose Product's Color</label>
            <select class="form-select" aria-label="Default select example" id="customFile" asp-for="ProductColorsIds" asp-items="ViewBag.colors"></select>
        </div>

        <div class="form-group">
            <label class="mt-2">Choose Product's Size</label>
            <select class="form-select" aria-label="Default select example" id="customFile" asp-for="ProductSizesIds" asp-items="ViewBag.sizes"></select>
        </div>

        <div class="form-group">
            <label class="mt-2">Choose Product's Tag</label>
            <select class="form-select" aria-label="Default select example" id="customFile" asp-for="ProductTagsIds" asp-items="ViewBag.tags"></select>
        </div>

        <div class="form-group>
            <label class="mt-5">Add Photo</label>
            <input class="form-control" id="customFile" asp-for="Photos">
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>


        <div class="my-3">
            <button type="submit" class="btn btn-success">Submit</button>
            <a type="button" asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </form>
</div>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Product-Name");
    </script>

    <script>
        CKEDITOR.replace("Product-Desc");
    </script>
}