@using ProniaBackEndProject.Areas.Admin.ViewModels.ContactVM;
@model List<ContactIndexVM>


@{
	ViewData["Title"] = "Contact";
}



<div style="padding-left:200px" class="container">

	<div class="tab-content" id="orders-table-tab-content">
		<div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
			<div class="app-card app-card-orders-table shadow-sm mb-5">
				<div class="app-card-body">
					<div class="table-responsive">
						<table class="table app-table-hover mb-0 text-left">
							<thead>
								<tr>

									<th class="cell">FirstName</th>
									<th class="cell">LastName</th>
									<th class="cell">Email</th>
									<th style="width: 340px;" class="cell">Operations</th>

								</tr>
							</thead>
							<tbody>

								@foreach (var contact in Model)
								{
									<tr>
										<td class="cell">
											@contact.FirstName
										</td>
										<td class="cell">
											@contact.LastName
										</td>
										<td class="cell">
											@contact.Email
										</td>

										<td class="cell">
											<a asp-action="Detail" asp-route-id="@contact.Id" style="border:1px solid blue" class="btn btn-outline-info">Info</a>
											<form style="display:inline-block" asp-action="Delete" asp-route-id="@contact.Id" method="post">
												<button type="submit" style="border:1px solid red" class="btn btn-outline-danger">Delete</button>
											</form>
										</td>

									</tr>
								}


							</tbody>
						</table>
					</div><!--//table-responsive-->

				</div><!--//app-card-body-->
			</div><!--//app-card-->


		</div><!--//tab-pane-->




	</div><!--//tab-content-->

</div>




