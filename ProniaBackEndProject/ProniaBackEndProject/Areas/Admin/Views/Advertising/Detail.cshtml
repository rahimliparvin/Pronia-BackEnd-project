@model AdvertisingDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container" style="padding-left:200px">

    <div class="form-group my-3">
        <label>NAME</label>
        <input disabled class="form-control" value="@Model.Name" style="display:block;"/>
    </div>
    <div class="form-group  my-3">
        <label>DESCRIPTION</label>
        <input disabled class="form-control" value="@Model.Description" style="display:block;"/>
    </div>
  
    <div class="slider-content" style="display:flex">
        <img style="width:200px;height:200px;object-fit:cover" src="~/assets/images/website-images/@Model.Image" />
    </div>

    <a style=" float: right;" class="btn btn-info my-3" asp-action="Index">Back</a>

</div>

