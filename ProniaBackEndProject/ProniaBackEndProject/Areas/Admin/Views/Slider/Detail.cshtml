@model SliderDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container" style="padding-left:200px">
   
    <div class="form-group my-3">
        <label>OFFER</label>
        <input disabled class="form-control" value="@Model.Offer" style="display:block;"/>
    </div>
    <div class="form-group  my-3">
        <label>TITLE</label>
        <input disabled class="form-control" value="@Model.Title" style="display:block;"/>
    </div>
    <div class="form-group my-3">
        <label>Description</label>
        <input disabled class="form-control" value="@Model.Description" style="display:block;"/>
    </div>
   

    <div class="slider-content" style="display:flex" >
        <img style="width:300px;height:300px;margin-right:20px;" src="~/assets/images/website-images/@Model.Image" />
        <img style="width:300px;height:300px;" src="~/assets/images/website-images/@Model.BackGroundImage" />
    </div>

    <a style=" float: right;" class="btn btn-info my-3" asp-action="Index">Back</a>
   
</div>

