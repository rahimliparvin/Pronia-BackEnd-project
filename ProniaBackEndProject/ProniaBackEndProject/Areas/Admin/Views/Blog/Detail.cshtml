@using ProniaBackEndProject.Areas.Admin.ViewModels.BlogVM;
@model BlogAdminDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container" style="padding-left:200px">

    <div class="form-group my-3">
        <label>NAME</label>
        <input disabled class="form-control" value="@Model.Title" style="display:block;" />
    </div>
    <div class="form-group  my-3">
        <label>DESCRIPTION</label>
        <input disabled class="form-control" value="@Model.Description" style="display:block;" />
    </div>

    <div class="form-group  my-3">
        <label>AuthorName</label>
        <input disabled class="form-control" value="@Model.AuthorName" style="display:block;" />
    </div>

    @foreach (var image in Model.Images)
    {

        <div class="slider-content" style="display:flex">
            <img style="width:300px;height:300px;" src="~/assets/images/website-images/@image.Image" />
        </div>
    }

    <a style=" float: right;" class="btn btn-info my-3" asp-action="Index">Back</a>

</div>

