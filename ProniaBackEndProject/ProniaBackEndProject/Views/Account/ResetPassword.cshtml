@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="col-lg-12">

        <form asp-controller="Account" asp-action="ConfirmResetPassword" method="post">
            <div class="login-form">
                <h4 class="login-title">Password</h4>
                <div class="row">
                    <div class="col-lg-6">


                        <input type="password" asp-for="Password" placeholder="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="col-lg-6">
                        <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>


                    <div class="col-lg-12 pt-5">
                        <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                            Send
                        </button>

                    </div>

                    <input type="hidden" asp-for="Token" value="@Model.Token" />

                    <input type="hidden" asp-for="UserId" value="@Model.UserId" />


                </div>
            </div>
        </form>
    </div>

</div>