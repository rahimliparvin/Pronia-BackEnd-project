@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="col-lg-12 pt-5 pt-lg-0">
    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="login-form" style="margin-bottom:25px;margin-left:400px;margin-right:400px;margin-top:60px">
            <h4 class="login-title">Register</h4>
            <div class="row">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="col-md-6 col-12">
                    <label>First Name</label>
                    <input type="text" asp-for="FirstName" placeholder="First Name" />
                </div>
                <div class="col-md-6 col-12">
                    <label>Last Name</label>
                    <input type="text" asp-for="LastName" placeholder="Last Name" />
                </div>
                <div class="col-md-6 col-12">
                    <label>UserName</label>
                    <input type="text" asp-for="UserName" placeholder="UserName" />
                </div>
                <div class="col-md-12">
                    <label>Email Address*</label>
                    <input type="email" asp-for="Email" placeholder="Email Address" />
                </div>
                <div class="col-md-6">
                    <label>Password</label>
                    <input type="password" asp-for="Password" placeholder="Password" />
                </div>
                <div class="col-md-6">
                    <label>Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                        Register
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>





